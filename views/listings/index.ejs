<%layout("/layouts/boilerplate.ejs")%>
   
      <style>
        #filters{
          display: flex;
          flex-wrap: wrap;
          margin-top:2rem;
          align-items: center;
        }
        .filter{
          text-align: center;
          margin-right:2rem;
          opacity: 0.7;
        }
          .filter a{
          text-decoration: none;
          color:black;
        }
        .filter:hover{
          opacity:1;
          cursor: pointer;
        }

        .filter p{
          font-size:0.8rem;
        }
        .taxInfo{
          display:none;
        }
        .tax-toggle{
          border:1px solid black;
          border-radius: 1rem;
          height:3.25rem;
          padding:1rem;
          margin-left:6rem;
          display: flex;
          align-items: center;
        }
      </style>
         <nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    

        <div id="filters">
            <div class="filter">
            <a href="Listings/search/rooms"><div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
          </div></a>
            <div class="filter">
            <a href="Listings/search/iconiccities"><div><i class="fa-solid fa-city"></i></div>
            <p>Iconin Cities</p>
          </div></a>
            <div class="filter">
            <a href="Listings/search/mountains"><div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
          </div></a>
            <div class="filter">
            <a href="Listings/search/castles"><div><i class="fa-brands fa-fort-awesome"></i></i></div>
            <p>Castles</p>
          </div></a>
            <div class="filter">
            <a href="Listings/search/amazingpools"><div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
          </div></a>
           <div class="filter">
            <a href="Listings/search/camping"><div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
          </div></a>
            <div class="filter">
            <a href="Listings/search/beach"><div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
          </div></a>
            <div class="filter">
            <a href="Listings/search/artic"><div><i class="fa-solid fa-snowflake"></i></div>
            <p>Artic</p>
          </div></a>
          <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
</div>
 </div>
</nav>
          </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
             <%for(let listing of allListings){%>
              <a href="/Listings/<%=listing.id%>" class="listing-link">
        <div class="card col listing-card">
  <img src="<%=listing.image.url%>" class="card-img-top" alt="listing image" style="height: 20rem" />
  <div class="card-img-overlay">
   
  </div>
  <div class="card-body">
    <p class="card-text">
        <b><%= listing.title %></b>
        <br>
        &#8377;<%= listing.price.toLocaleString("en-IN")%> / night
        <i class="taxInfo">&nbsp;&nbsp;+18%GST=&#8377;<%=(listing.price+(listing.price*18/100)).toLocaleString("en-IN")%></i>
    </p>
  </div>
</div>
<%}%>
</a>
</div>

<script>
  let taxSwitch=document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo = document.getElementsByClassName("taxInfo");
   for( info of taxInfo){
    if(info.style.display!="inline"){
      info.style.display="inline";
    }else{
      info.style.display="none";
    }
   }
  });
</script>
